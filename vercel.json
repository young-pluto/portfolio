{
  "version": 2,
  "builds": [
    { "src": "api/**/*.js", "use": "@vercel/node" },
    { "src": "*.html", "use": "@vercel/static" },
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/",
      "has": [
        {
          "type": "host",
          "value": "tasks.builtbyapoorv.in"
        }
      ],
      "dest": "/task-manager.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}