{
  "version": 2,
  "builds": [
    { 
      "src": "apps/tasks/api/**/*.js",
      "use": "@vercel/node"
    },
    { 
      "src": "apps/**/frontend/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(login|register)",
      "has": [
        {
          "type": "host",
          "value": "tasks.builtbyapoorv.in"
        }
      ],
      "dest": "/apps/tasks/api/auth/index.js"
    },
    {
      "src": "/api/tasks(.*)",
      "has": [
        {
          "type": "host",
          "value": "tasks.builtbyapoorv.in"
        }
      ],
      "dest": "/apps/tasks/api/tasks/index.js"
    },
    {
      "src": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "tasks.builtbyapoorv.in"
        }
      ],
      "dest": "/apps/tasks/frontend/task-manager.html"
    },
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}