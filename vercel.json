{
  "version": 2,
  "builds": [
    { 
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    { 
      "src": "tasks/**/*",
      "use": "@vercel/static"
    },
    { 
      "src": "*.html",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/auth/index.js"
    },
    {
      "src": "/api/tasks/(.*)",
      "dest": "/api/tasks/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/",
      "has": [
        {
          "type": "host",
          "value": "tasks.builtbyapoorv.in"
        }
      ],
      "dest": "/tasks/task-manager.html"
    },
    {
      "src": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "tasks.builtbyapoorv.in"
        }
      ],
      "dest": "/tasks/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}